{
    "[css]": {
      "editor.tabSize": 2
    },
    "[scss]": {
      "editor.tabSize": 2
    },
    "[javascript]": {
      "editor.tabSize": 2
    },
    "[javascriptreact]": {
      "editor.tabSize": 2
    },
    "[typescript]": {
      "editor.tabSize": 2
    },
    "[typescriptreact]": {
      "editor.tabSize": 2
    },
    "[json]": {
      "editor.tabSize": 2
    },
    "[python]": {
      "editor.codeActionsOnSave": {
        "source.organizeImports": "never"
      },
      "editor.defaultFormatter": "ms-python.autopep8",
      "editor.formatOnSave": false,
      "editor.tabSize": 4
    },
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    },
    "autopep8.args": [
      "--experimental",
      "--ignore=E501"
      // "--max-line-length", "120",
    ]
  }
